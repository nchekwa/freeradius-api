# Database driver: mysql.connector, psycopg, psycopg2, pymysql, pysqlite3, sqlite3
DB_DRIVER=mysql.connector

# MySQL / MariaDB settings (used when DB_DRIVER is mysql.connector or pymysql)
DB_NAME=raddb
DB_USER=raduser
DB_PASS=radpass
DB_HOST=mydb
DB_PORT=3306

# PostgreSQL settings (used when DB_DRIVER is psycopg or psycopg2)
#DB_NAME=raddb
#DB_USER=raduser
#DB_PASS=radpass
#DB_HOST=pgdb
#DB_PORT=5432

# SQLite settings (used when DB_DRIVER is sqlite3 or pysqlite3)
#DB_NAME=raddb

# Pagination
ITEMS_PER_PAGE=100

# Public API base URL (used for Location/Link headers)
API_URL=http://0.0.0.0:8000

# API key auth
# Header name for API key (default: X-API-Key)
#X_API_KEY_HEADER=X-API-Key

# Single API key value:
#X_API_KEY=super-secret-key

# Or comma-separated list of API keys:
#X_API_KEY=key1,key2,key3
